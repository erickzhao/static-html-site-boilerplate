    "pa11y-ci": "^2.4.0",
    "postcss-loader": "^3.0.0",
    "raw-loader": "^4.0.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^19.0.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
      "webpack-merge": "^4.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
